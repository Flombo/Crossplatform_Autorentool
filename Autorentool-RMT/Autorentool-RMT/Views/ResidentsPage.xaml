    <!-- Page/View content begin -->
    <StackLayout Orientation="Vertical">

        <!--<StackLayout BindableLayout.ItemTemplate="{StaticResource BasicHeaderTemplate}" />-->
        <!--<StackLayout BindableLayout.ItemTemplate="{x:StaticResource: BasicHeaderTemplate}" />-->

        <CollectionView ItemsSource="{Binding Residents}" ItemsLayout="VerticalGrid, 4" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Grid 
                        BackgroundColor="White" 
                        Padding="2"
                        HeightRequest="120">
                        <Image
                            Source="{Binding ProfilePicImageSource}"
                            Aspect="AspectFit"
                            HeightRequest="120"
                            WidthRequest="60"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            BackgroundColor="White"/>
                        <StackLayout
                                BackgroundColor="#252525"
                                Opacity="0.75"
                                WidthRequest="60"
                                Grid.Row="1"
                                HeightRequest="60">
                            <Label 
                                Text="{Binding ResidentOneLineSummary}"
                                TextColor="White"
                                FontAttributes="Bold"
                                LineBreakMode="WordWrap"/>
                            <Label
                                Text="{Binding Age}"
                                TextColor="White"
                                LineBreakMode="TailTruncation"
                                FontAttributes="Italic"
                                VerticalOptions="End" />
                        </StackLayout>
                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button 
            Text="&#43; NEUEN BEWOHNER HINZUFÜGEN"
            TextColor="White"
            BackgroundColor="Orange" 
            FontSize="Subtitle"
            FontAttributes="Bold"
            Clicked="OnAddNewResidentButtonClicked"/>


        <!-- Footer begin -->
