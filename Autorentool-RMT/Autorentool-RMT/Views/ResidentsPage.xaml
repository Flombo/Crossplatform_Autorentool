    <!-- Page/View content begin -->
    <StackLayout Orientation="Vertical">

        <!--<StackLayout BindableLayout.ItemTemplate="{StaticResource BasicHeaderTemplate}" />-->
        <!--<StackLayout BindableLayout.ItemTemplate="{x:StaticResource: BasicHeaderTemplate}" />-->

        <CollectionView ItemsSource="{Binding Residents}" ItemsLayout="VerticalGrid, 4">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    
                    <StackLayout 
                        BackgroundColor="White" 
                        Padding="2"
                        HeightRequest="120">
                        <Image
                            Source="{Binding GetFullProfilePicPath}"
                            Aspect="AspectFit"
                            HeightRequest="60"
                            WidthRequest="60"
                            BackgroundColor="White"/>
                        <StackLayout
                            BackgroundColor="#252525"
                            Opacity="0.75">
                            <Label 
                                Text="{Binding ResidentOneLineSummary}"
                                TextColor="White"
                                FontAttributes="Bold"
                                LineBreakMode="WordWrap"/>
                            <Label
                                Text="{Binding Age}"
                                TextColor="White"
                                LineBreakMode="TailTruncation"
                                FontAttributes="Italic"
                                VerticalOptions="End" />
                        </StackLayout>
                    </StackLayout>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button 
            Text="&#43; NEUEN BEWOHNER HINZUFÜGEN"
            TextColor="White"
            BackgroundColor="Orange" 
            FontSize="Subtitle"
            FontAttributes="Bold"
            Clicked="OnAddNewResidentButtonClicked"/>


