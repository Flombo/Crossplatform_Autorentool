<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:local="clr-namespace:Autorentool_RMT.Views.Popups"
           xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
           x:Class="Autorentool_RMT.Views.Popups.PasswordPopup"
           Size="350, 150"
           x:TypeArguments="local:PasswordPopup+Result"
           BackgroundColor="White">

    <StackLayout BackgroundColor="White" 
          WidthRequest="350"
          HeightRequest="150"
          VerticalOptions="CenterAndExpand" 
          HorizontalOptions="CenterAndExpand">
        <Label Text="Passwort fürs Löschen aller Inhalte" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>
        <Entry IsPassword="True" Placeholder="Passwort" Text="{Binding Password}" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Ok" Clicked="OnAcceptButtonClicked" WidthRequest="150" IsEnabled="{Binding IsAcceptButtonEnabled}" BackgroundColor="{Binding AcceptButtonBackgroundColour}" HorizontalOptions="StartAndExpand"/>
            <Button Text="Abbrechen" Clicked="OnAbortButtonClicked" BackgroundColor="LightGray" HorizontalOptions="EndAndExpand" WidthRequest="150"/>
        </StackLayout>
    </StackLayout>

</xct:Popup>